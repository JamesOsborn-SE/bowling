<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:foregroundGravity="center"
    android:paddingBottom="50dp"
    android:background="@drawable/bg_frame_border">

    <TextView
        android:id="@+id/frame_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frame"
        android:background="@drawable/bg_frame_border"
        android:gravity="center"
        android:textSize="20sp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        >

    <EditText
        android:id="@+id/first_shot"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/first_shot"
        android:padding="10dp"
        android:inputType="number"
        android:background="@drawable/bg_frame_border"
        android:hint="@string/first_shot"
        />


    <EditText
        android:id="@+id/second_shot"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="shot two"
        android:inputType="number"
        android:background="@drawable/bg_frame_border"
        android:hint="@string/second_shot"
        />


    <EditText
        android:id="@+id/third_shot"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="shot three"
        android:inputType="number"
        android:background="@drawable/bg_frame_border"
        android:hint="@string/third_shot"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>