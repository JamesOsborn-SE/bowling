<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:foregroundGravity="center"
    android:paddingBottom="50dp"
    android:background="@drawable/score_border">

    <TextView
        android:id="@+id/frameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frame"
        android:background="@drawable/score_border"
        android:gravity="center"
        android:textSize="20dp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShotOneLabel"
            android:labelFor="@+id/ShotOne"
            />
    <EditText
        android:id="@+id/ShotOne"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="shot one"
        android:padding="10dp"
        android:inputType="number"
        android:background="@drawable/score_border"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShotTwoLabel"
            android:labelFor="@+id/ShotTwo"
            />

    <EditText
        android:id="@+id/ShotTwo"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="shot two"
        android:inputType="number"
        android:background="@drawable/score_border"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ShotThreeLabel"
    android:labelFor="@+id/ShotThree"
    />


    <EditText
        android:id="@+id/ShotThree"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:autofillHints="shot three"
        android:inputType="number"
        android:background="@drawable/score_border"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>